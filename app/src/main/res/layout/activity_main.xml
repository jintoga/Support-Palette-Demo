<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        fresco:fadeDuration="500"
        fresco:viewAspectRatio="1.3333" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dominantSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

        <TextView
            android:id="@+id/vibrantSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

        <TextView
            android:id="@+id/vibrantLightSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

        <TextView
            android:id="@+id/vibrantDarkSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

        <TextView
            android:id="@+id/mutedSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

        <TextView
            android:id="@+id/mutedLightSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

        <TextView
            android:id="@+id/mutedDarkSwatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>